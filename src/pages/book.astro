            <div class={`rate-card p-6 rounded-lg shadow-lg transition-all duration-200 hover:shadow-xl ${
              period.type === 'standard' ? 'bg-white border-l-4 border-brook-blue' :
              period.type === 'peak' ? 'bg-felted-green-50 border-l-4 border-felted-green' :
              period.type === 'holiday' ? 'bg-deep-forest-50 border-l-4 border-deep-forest' :
              period.type === 'event' ? 'bg-granite-50 border-l-4 border-granite-500' :
              'bg-white border-l-4 border-granite-300'
            }`}>
              <div class="flex flex-col lg:flex-row lg:items-center lg:justify-between">
                <div class="flex-1">
                  <div class="flex items-center mb-2">
                    <h3 class="text-xl font-semibold text-deep-forest mr-3">
                      {period.season}
                    </h3>
                    {period.type === 'peak' && (
                      <span class="bg-felted-green text-white px-2 py-1 rounded text-xs font-medium">
                        PEAK
                      </span>
                    )}
                    {period.type === 'holiday' && (
                      <span class="bg-deep-forest text-white px-2 py-1 rounded text-xs font-medium">
                        HOLIDAY
                      </span>
                    )}
                    {period.type === 'event' && (
                      <span class="bg-granite-500 text-white px-2 py-1 rounded text-xs font-medium">
                        EVENT
                      </span>
                    )}
                  </div>
                  <p class="text-granite-600 mb-1">
                    <span class="font-medium">Dates:</span> {period.period}
                  </p>
                  {period.description && (
                    <p class="text-sm text-granite-500 italic">
                      {period.description}
                    </p>
                  )}
                  {period.peakDates && (
                    <div class="mt-3 space-y-1">
