---
import BaseLayout from '../layouts/BaseLayout.astro';
import Header from '../components/layout/Header.astro';
import Footer from '../components/layout/Footer.astro';
import { CloudinaryImageEnhanced } from '../components/ui/CloudinaryImageEnhanced.astro';
import { CloudinaryHero } from '../components/ui/CloudinaryHero.astro';
import { pageSEO } from '../lib/seo';

const seoData = {
  title: pageSEO.localGuide.title,
  description: pageSEO.localGuide.description,
  keywords: pageSEO.localGuide.keywords,
  type: 'article' as const
};

// Local attractions and activities
const waterfalls = [
  {
    name: "Dry Falls",
    distance: "8 miles",
    description: "Walk behind this stunning 75-foot waterfall for a unique perspective",
    difficulty: "Easy",
    image: "banyan_tree/flat_mountain/dry-falls"
  },
  {
    name: "Bridal Veil Falls",
    distance: "9 miles",
    description: "Drive behind this beautiful waterfall on US Highway 64",
    difficulty: "Easy",
    image: "banyan_tree/flat_mountain/bridal-veil-falls"
  },
  {
    name: "Glen Falls",
    distance: "12 miles",
    description: "Three-tiered waterfall with swimming holes and hiking trails",
    difficulty: "Moderate",
    image: "banyan_tree/flat_mountain/glen-falls"
  },
  {
    name: "Whitewater Falls",
    distance: "15 miles",
    description: "The highest waterfall in the eastern United States at 411 feet",
    difficulty: "Easy to Moderate",
    image: "banyan_tree/flat_mountain/whitewater-falls"
  }
];

const restaurants = [
  {
    name: "The Old Edwards Inn & Spa",
    type: "Fine Dining",
    distance: "5 minutes",
    cuisine: "Contemporary American",
    description: "Elegant dining with seasonal menus and mountain views",
    price: "$$$$"
  },
  {
    name: "Skyline Lodge Restaurant",
    type: "Mountain Lodge",
    distance: "8 minutes",
    cuisine: "Southern Mountain",
    description: "Rustic charm with hearty mountain fare and scenic views",
    price: "$$$"
  },
  {
    name: "Wild Thyme Gourmet",
    type: "Market & Cafe",
