<script define:vars={{ tagToRoomMapping }}>
  // Load room images from Cloudinary tags after page load with rotation
  document.addEventListener('DOMContentLoaded', async function() {
    console.log('üè† Loading room images from Cloudinary tags...');

    // Function to fetch images by tag - using simple API and filtering
    async function getImagesByTag(tag) {
      try {
        const response = await fetch(`/api/cloudinary/simple`);
        const data = await response.json();

        if (data.error) {
          console.error(`Error fetching resources:`, data.error);
          return [];
        }

        // Filter resources by tag
        const filteredResources = (data.resources || []).filter(resource =>
          resource.tags && resource.tags.includes(tag)
        );

        console.log(`Found ${filteredResources.length} images for tag "${tag}":`, filteredResources.map(r => r.public_id));

        return filteredResources.map(resource => resource.public_id);
      } catch (error) {
        console.error(`Failed to fetch images for tag "${tag}":`, error);
        return [];
      }
    }

    // Store image data for rotation
    const roomImageMap = {};
    const rotationIntervals = {};

    // Load images for each mapped tag
    for (const [tag, roomName] of Object.entries(tagToRoomMapping)) {
      try {
        console.log(`üîç Fetching images for tag: "${tag}" (${roomName})`);
        const images = await getImagesByTag(tag);

        if (images.length > 0) {
          // Only process if we haven't already loaded images for this room
          if (!roomImageMap[roomName]) {
            roomImageMap[roomName] = images;
            console.log(`‚úÖ Found ${images.length} images for ${roomName}:`, images);

            // Update the room card with tag-based images
            if (images.length === 1) {
              // Single image - just display it
              updateRoomImage(roomName, images[0]);
              console.log(`üì∏ Single image loaded for ${roomName}`);
            } else if (images.length > 1) {
              // Multiple images - set up rotation
              setupImageRotation(roomName, images);
              console.log(`üîÑ Image rotation setup for ${roomName} with ${images.length} images`);
            }
          } else {
            console.log(`‚è≠Ô∏è Skipping ${roomName} - already loaded ${roomImageMap[roomName].length} images`);
          }
        } else {
          console.warn(`‚ö†Ô∏è No images found for tag "${tag}" (${roomName})`);
        }
      } catch (error) {
        console.error(`‚ùå Failed to load images for ${roomName}:`, error);
      }
    }

    // Function to update room image on the page
    function updateRoomImage(roomName, publicId, transition = false) {
      const roomCards = document.querySelectorAll('.room-card');

      roomCards.forEach(card => {
        const cardRoomName = card.getAttribute('data-room-name');
        if (cardRoomName === roomName) {
          const img = card.querySelector('.room-image');
          const loadingPlaceholder = card.querySelector('.room-image-loading');

          if (img && publicId) {
            // Generate Cloudinary URL with gallery preset
            const cloudinaryUrl = `https://res.cloudinary.com/southland-organics/image/upload/w_800,h_600,c_fill,g_auto,q_auto:good,f_auto/${publicId}`;

            if (transition && img.src !== cloudinaryUrl) {
              // Slower, smoother transition for rotation
              img.style.opacity = '0.3';
              img.style.transition = 'opacity 1.2s ease-in-out';

              setTimeout(() => {
                img.src = cloudinaryUrl;
                img.alt = `${roomName} at The Bodhi`;
                img.style.opacity = '1';

                // Ensure cross-browser compatibility
                img.style.display = 'block';
                img.style.width = '100%';
                img.style.height = '100%';
                img.style.objectFit = 'cover';
                img.style.position = 'relative';
                img.style.zIndex = '10';

                console.log(`üîÑ Rotated ${roomName} image to:`, publicId);
              }, 600);
            } else {
              // Initial load
              img.src = cloudinaryUrl;
              img.alt = `${roomName} at The Bodhi`;

              // Fix Chrome compatibility issues
              img.style.display = 'block';
              img.style.width = '100%';
              img.style.height = '100%';
              img.style.objectFit = 'cover';
              img.style.position = 'relative';
              img.style.zIndex = '10';
              img.loading = 'eager'; // Load room images immediately

              // Force layout recalculation for Chrome
              img.style.transform = 'translateZ(0)';

              console.log(`üñºÔ∏è Updated ${roomName} image to:`, cloudinaryUrl);
            }

            // Add loading handler for better compatibility
            img.addEventListener('load', function() {
              img.style.opacity = '1';
              // Hide loading placeholder once image loads
              if (loadingPlaceholder) {
                loadingPlaceholder.style.display = 'none';
              }
            });

            img.addEventListener('error', function() {
              console.error(`Failed to load image: ${cloudinaryUrl}`);
              // Keep placeholder visible on error
              if (loadingPlaceholder) {
                loadingPlaceholder.innerHTML = `
                  <div class="text-center text-gray-500">
                    <svg class="w-8 h-8 mx-auto mb-2" fill="currentColor" viewBox="0 0 20 20">
                      <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7 4a1 1 0 11-2 0 1 1 0 012 0zm-1-9a1 1 0 00-1 1v4a1 1 0 102 0V6a1 1 0 00-1-1z" clip-rule="evenodd"/>
                    </svg>
                    <p class="text-xs">Image unavailable</p>
                  </div>
                `;
              }
            });
          }
        }
      });
    }

    // Function to setup image rotation for rooms with multiple images
    function setupImageRotation(roomName, images) {
      let currentIndex = 0;

      // Display first image immediately
      updateRoomImage(roomName, images[0]);

      if (images.length > 1) {
        // Set up slower rotation every 8 seconds
        const intervalId = setInterval(() => {
          currentIndex = (currentIndex + 1) % images.length;
          updateRoomImage(roomName, images[currentIndex], true);
        }, 8000);

        // Store interval ID for potential cleanup
        rotationIntervals[roomName] = intervalId;

        console.log(`üîÑ Started rotation for ${roomName} with ${images.length} images`);
      }
    }

    // Cleanup function (if needed)
    window.stopRoomImageRotation = function(roomName) {
      if (rotationIntervals[roomName]) {
        clearInterval(rotationIntervals[roomName]);
        delete rotationIntervals[roomName];
        console.log(`‚èπÔ∏è Stopped rotation for ${roomName}`);
      }
    };
  });
