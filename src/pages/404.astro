---
import BaseLayout from '../layouts/BaseLayout.astro';
import Header from '../components/layout/Header.astro';
import Footer from '../components/layout/Footer.astro';

const seoData = {
  title: '404 - Page Not Found | The Bodhi Highlands NC',
  description: 'The page you are looking for could not be found. Return to The Bodhi luxury vacation rental website.',
  type: 'website' as const
};
---

<BaseLayout seoData={seoData}>
  <Header />

  <main class="min-h-screen flex items-center justify-center bg-gradient-to-br from-canvas to-granite-50 px-4">
    <div class="max-w-2xl mx-auto text-center">
      <!-- Mountain Icon -->
      <div class="mb-8">
        <svg class="w-24 h-24 mx-auto text-felted-green opacity-80" fill="currentColor" viewBox="0 0 24 24">
          <path d="M14 6l-3.75 5 2.85 3.8-1.6 1.2C9.81 13.75 7 10 7 10l-6 8h22l-9-12z"/>
        </svg>
      </div>

      <h1 class="text-6xl font-bold text-deep-forest mb-4">404</h1>
      <h2 class="text-3xl font-semibold text-granite-700 mb-6">Lost in the Mountains</h2>

      <p class="text-xl text-granite-600 mb-8 leading-relaxed">
        Looks like you've wandered off the trail. The page you're looking for doesn't exist,
        but don't worry - we'll help you find your way back to The Bodhi.
      </p>

      <!-- Action Buttons -->
      <div class="space-y-4 mb-12">
        <a
          href="/"
          class="inline-flex items-center justify-center bg-felted-green hover:bg-felted-green-600 text-white px-8 py-4 rounded-lg font-semibold text-lg transition-colors duration-300 shadow-lg hover:shadow-xl transform hover:-translate-y-1"
        >
          <svg class="w-5 h-5 mr-2" fill="currentColor" viewBox="0 0 20 20">
            <path d="M10.707 2.293a1 1 0 00-1.414 0l-7 7a1 1 0 001.414 1.414L4 10.414V17a1 1 0 001 1h2a1 1 0 001-1v-2a1 1 0 011-1h2a1 1 0 011 1v2a1 1 0 001 1h2a1 1 0 001-1v-6.586l.293.293a1 1 0 001.414-1.414l-7-7z"/>
          </svg>
          Return Home
        </a>
      </div>

      <!-- Helpful Links -->
      <div class="bg-white rounded-xl shadow-lg p-8">
        <h3 class="text-xl font-semibold text-deep-forest mb-6">Popular Pages</h3>
        <div class="grid md:grid-cols-2 gap-4">
          <a href="/property" class="flex items-center p-4 hover:bg-granite-50 rounded-lg transition-colors">
            <svg class="w-6 h-6 text-felted-green mr-3" fill="currentColor" viewBox="0 0 20 20">
              <path d="M10.707 2.293a1 1 0 00-1.414 0l-7 7a1 1 0 001.414 1.414L4 10.414V17a1 1 0 001 1h2a1 1 0 001-1v-2a1 1 0 011-1h2a1 1 0 011 1v2a1 1 0 001 1h2a1 1 0 001-1v-6.586l.293.293a1 1 0 001.414-1.414l-7-7z"/>
            </svg>
            <div>
              <div class="font-medium text-deep-forest">Property Details</div>
              <div class="text-sm text-granite-600">Explore The Bodhi estate</div>
            </div>
          </a>

          <a href="/book" class="flex items-center p-4 hover:bg-granite-50 rounded-lg transition-colors">
            <svg class="w-6 h-6 text-felted-green mr-3" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M6 2a1 1 0 00-1 1v1H4a2 2 0 00-2 2v10a2 2 0 002 2h12a2 2 0 002-2V6a2 2 0 00-2-2h-1V3a1 1 0 10-2 0v1H7V3a1 1 0 00-1-1zm0 5a1 1 0 000 2h8a1 1 0 100-2H6z" clip-rule="evenodd"/>
            </svg>
            <div>
              <div class="font-medium text-deep-forest">Book Your Stay</div>
              <div class="text-sm text-granite-600">Check availability & rates</div>
            </div>
          </a>

          <a href="/local-guide" class="flex items-center p-4 hover:bg-granite-50 rounded-lg transition-colors">
            <svg class="w-6 h-6 text-felted-green mr-3" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M5.05 4.05a7 7 0 119.9 9.9L10 18.9l-4.95-4.95a7 7 0 010-9.9zM10 11a2 2 0 100-4 2 2 0 000 4z" clip-rule="evenodd"/>
            </svg>
            <div>
              <div class="font-medium text-deep-forest">Local Guide</div>
              <div class="text-sm text-granite-600">Highlands NC attractions</div>
            </div>
          </a>

          <a href="/contact" class="flex items-center p-4 hover:bg-granite-50 rounded-lg transition-colors">
            <svg class="w-6 h-6 text-felted-green mr-3" fill="currentColor" viewBox="0 0 20 20">
              <path d="M2.003 5.884L10 9.882l7.997-3.998A2 2 0 0016 4H4a2 2 0 00-1.997 1.884z"/>
              <path d="M18 8.118l-8 4-8-4V14a2 2 0 002 2h12a2 2 0 002-2V8.118z"/>
            </svg>
            <div>
              <div class="font-medium text-deep-forest">Contact Us</div>
              <div class="text-sm text-granite-600">Get in touch</div>
            </div>
          </a>
        </div>
      </div>

      <!-- Search -->
      <div class="mt-8">
        <div class="text-sm text-granite-500">
          Still can't find what you're looking for? Try using your browser's back button or contact us directly.
        </div>
      </div>
    </div>
  </main>

  <Footer />
</BaseLayout>

<style>
  .transform {
    transition: transform 0.3s ease;
  }
</style>