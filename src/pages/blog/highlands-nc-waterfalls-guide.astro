        loading="eager"
      />
      <div style="position: absolute; top: 0; left: 0; width: 100%; height: 100%; background: linear-gradient(to bottom, rgba(45, 69, 56, 0.4), rgba(0, 0, 0, 0.7)); z-index: 2;"></div>

      <!-- Content Overlay -->
      <div class="relative h-full flex items-end pb-16" style="z-index: 3;">
        <div class="container mx-auto px-4">
          <div class="max-w-4xl mx-auto text-white">
            <!-- Category Badge -->
            <div class="inline-block px-4 py-2 rounded-full text-sm font-semibold mb-4" style="background-color: rgb(86, 125, 95); color: white;">
              {postData.category}
            </div>

            <!-- Title -->
            <h1 class="text-4xl md:text-6xl font-anamortee mb-6 leading-tight">
              {postData.title}
            </h1>

            <!-- Meta Info -->
            <div class="flex flex-wrap items-center gap-6 text-lg opacity-90">
              <div class="flex items-center">
                <span class="mr-2">üìÖ</span>
                <time datetime={postData.publishDate}>{postData.publishDate}</time>
              </div>
              <div class="flex items-center">
                <span class="mr-2">‚è±Ô∏è</span>
                <span>{postData.readTime}</span>
              </div>
              <div class="flex items-center">
                <span class="mr-2">‚úçÔ∏è</span>
                <span>{postData.author}</span>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Waterfall Quick Guide -->
    <section class="py-16 text-white" style="background: linear-gradient(to right, rgb(86, 125, 95), rgb(45, 69, 56));">
      <div class="container mx-auto px-4">
        <div class="max-w-6xl mx-auto text-center">
          <h2 class="text-3xl font-bold mb-4">üåä The Four Must-See Waterfalls</h2>
          <p class="text-xl opacity-90 mb-12">Your complete guide to Highlands' most spectacular cascades</p>

          <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-6">
