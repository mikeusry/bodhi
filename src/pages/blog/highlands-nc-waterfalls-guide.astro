              <div class="bg-white/10 rounded-lg p-6 hover:bg-white/20 transition-colors duration-300">
                <div class="aspect-square rounded-lg overflow-hidden mb-4">
                  <img
                    src={`https://res.cloudinary.com/southland-organics/image/upload/c_fill,w_300,h_300,q_auto:best,f_auto/${waterfall.image}`}
                    alt={waterfall.name}
                    class="w-full h-full object-cover"
                    loading="lazy"
                  />
                </div>
                <h3 class="text-lg font-semibold mb-2">{waterfall.name}</h3>
                <div class="text-sm opacity-90 space-y-1">
                  <div>üìè {waterfall.height}</div>
                  <div>üìç {waterfall.distance}</div>
                  <div>ü•æ {waterfall.difficulty}</div>
                  <div class="text-yellow-300 font-medium">‚ú® {waterfall.highlight}</div>
                </div>
              </div>
            ))}
          </div>
        </div>
      </div>
    </section>

    <!-- Article Content -->
    <section class="py-16 bg-canvas">
      <div class="container mx-auto px-4">
        <div class="max-w-4xl mx-auto">

          <!-- Introduction -->
