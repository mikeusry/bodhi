---
import BaseLayout from '../../layouts/BaseLayout.astro';
import Header from '../../components/layout/Header.astro';
import Footer from '../../components/layout/Footer.astro';

const seoData = {
  title: 'Ultimate Guide to Highlands NC Waterfalls: A Local\'s Secret Spots - The Bodhi Blog',
  description: 'Discover the most spectacular waterfalls near Highlands, NC including Dry Falls, Bridal Veil Falls, Glen Falls, and Whitewater Falls. Local insider tips and secret viewpoints from The Bodhi luxury vacation rental.',
  keywords: 'Highlands NC waterfalls, Dry Falls, Bridal Veil Falls, Glen Falls, Whitewater Falls, North Carolina waterfall guide, Blue Ridge Mountains',
  type: 'article' as const
};

const postData = {
  title: "Ultimate Guide to Highlands NC Waterfalls: A Local's Secret Spots",
  publishDate: "September 20, 2024",
  readTime: "12 min read",
  category: "Travel Guide",
  author: "The Bodhi Team",
  heroImage: "banyan_tree/flat_mountain/dryfallsfeature_m4ubgb"
};

const waterfalls = [
  {
    name: "Dry Falls",
    distance: "2.5 miles from Highlands",
    height: "75 feet",
    image: "banyan_tree/flat_mountain/dryfallsfeature_m4ubgb",
    difficulty: "Easy",
    highlight: "Walk behind the waterfall"
  },
  {
    name: "Bridal Veil Falls",
    distance: "4.5 miles from Highlands",
    height: "60 feet",
    image: "banyan_tree/flat_mountain/Bridal-Veil-Falls",
    difficulty: "Easy",
    highlight: "Drive through the waterfall"
  },
  {
    name: "Glen Falls",
    distance: "1 mile from Highlands",
    height: "60 feet (upper falls)",
    image: "banyan_tree/flat_mountain/glen-falls-nc",
    difficulty: "Moderate",
    highlight: "Three waterfalls in one hike"
  },
  {
    name: "Whitewater Falls",
    distance: "15 miles from Highlands",
    height: "411 feet",
    image: "banyan_tree/flat_mountain/Whitewater-Falls",
    difficulty: "Easy to Strenuous",
    highlight: "Tallest waterfall east of Rockies"
  }
];
---

<BaseLayout seoData={seoData}>
  <Header />

  <!-- Hero Section -->
  <article class="blog-post">
    <section class="relative overflow-hidden" style="height: 80vh;">
      <img
        src={`https://res.cloudinary.com/southland-organics/image/upload/c_fill,w_1920,h_1200,q_auto:best,f_auto/${postData.heroImage}`}
        alt={postData.title}
