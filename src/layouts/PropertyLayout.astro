---
import BaseLayout from './BaseLayout.astro';

export interface Props {
  title?: string;
  description?: string;
  canonicalURL?: string;
  image?: string;
}

const { title, description, canonicalURL, image } = Astro.props;
---

<BaseLayout title={title} description={description} canonicalURL={canonicalURL} image={image}>
  <main class="min-h-screen">
    <slot />
  </main>
</BaseLayout>